<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.store_sample.store.infrastructure.users.UserMapper">
  <insert id="insert" parameterType="com.store_sample.store.domain.users.model.CreateUserModel">
    INSERT INTO users
    (username, password, role, enabled)
    VALUES
    (#{username}, #{password}, #{role}, #{enabled})
  </insert>
  <select id="findWithPassword"
    resultType="com.store_sample.store.domain.users.model.DetailUserWithPasswordModel">
    SELECT * FROM users
    WHERE username = #{name}
  </select>
</mapper>