<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.store_sample.store.infrastructure.channels.ChannelMapper">
  <insert id="insert" parameterType="com.store_sample.store.domain.channels.model.Channel">
    INSERT INTO channels
    (id, name)
    VALUES
    (#{id}, #{name})
  </insert>

  <select id="findAll" resultMap="ChannelWithUsersResultMap">
    SELECT * FROM channels
    JOIN channel_members ON channel_members.channel_id = channels.id
    JOIN users ON channel_members.user_id = users.id
  </select>
  <resultMap id="ChannelWithUsersResultMap"
    type="com.store_sample.store.domain.channels.model.Channel">
    <id property="id" column="channel_id"/>
    <result property="name" column="channel_name"/>
    <collection property="userDetails"
      ofType="com.store_sample.store.domain.auth.model.CustomUserDetails">
      <id property="id" column="user_id"/>
      <result property="username" column="user_username"/>
    </collection>
  </resultMap>


  <select id="getMaxId" resultType="int">
    SELECT MAX(id) AS max_id FROM channels
  </select>
  <update id="update" parameterType="com.store_sample.store.domain.channels.model.Channel">
    UPDATE channels SET
    name = #{name}
    WHERE
    id = #{id}
  </update>
  <delete id="delete">
    DELETE FROM channels WHERE id = #{id}
  </delete>
</mapper>