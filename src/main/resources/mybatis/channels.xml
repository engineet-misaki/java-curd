<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.store_sample.store.infrastructure.channels.ChannelMapper">
  <insert id="insert"
    parameterType="com.store_sample.store.domain.channels.model.CreateChannelModel"
    useGeneratedKeys="true" keyProperty="id">
    INSERT INTO channels
    (name)
    VALUES
    (#{name})
  </insert>

  <select id="findAll" resultMap="ChannelWithUsersResultMap">
    SELECT ch.id as id, ch.name as name,
    u.id as user_id, u.username as user_username, u.role as user_role, u.enabled as enabled
    FROM channels as ch
    LEFT JOIN channel_members ON channel_members.channel_id = ch.id
    LEFT JOIN users u ON channel_members.user_id = u.id AND u.enabled = true;
  </select>
  <resultMap id="ChannelWithUsersResultMap"
    type="com.store_sample.store.domain.channels.model.FindAllChannelModel">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <collection property="userDetails"
      ofType="com.store_sample.store.domain.users.model.DetailUserModel">
      <id property="id" column="user_id"/>
      <result property="username" column="user_username"/>
      <result property="role" column="user_role"/>
      <result property="enabled" column="enabled"/>
    </collection>
  </resultMap>

  <update id="update"
    parameterType="com.store_sample.store.domain.channels.model.UpdateChannelModel">
    UPDATE channels SET
    name = #{name}
    WHERE
    id = #{id}
  </update>
  <delete id="delete">
    DELETE FROM channels WHERE id = #{id}
  </delete>
</mapper>